---
import Layout from "../layouts/Layout.astro";

// Ta strona wymaga autentykacji - middleware przekieruje niezalogowanych użytkowników
const {user} = Astro.locals;

export const prerender = false;
---

<Layout title='Dashboard - AltImageOptimizer'>
  <main class='container mx-auto py-8 px-4'>
    <div class='max-w-4xl mx-auto'>
      <div class='flex justify-between items-center mb-8'>
        <h1 class='text-3xl font-bold'>Dashboard</h1>
        <p class='text-gray-600'>Witaj, {user?.email}</p>
      </div>

      <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
        <div class='bg-white p-6 rounded-lg shadow-md'>
          <h2 class='text-xl font-semibold mb-4'>Historia Optymalizacji</h2>
          <p class='text-gray-600 mb-4'>Przeglądaj i zarządzaj swoją historią optymalizacji obrazów.</p>
          <a href='/history' class='text-blue-600 hover:underline'> Przejdź do historii → </a>
        </div>

        <div class='bg-white p-6 rounded-lg shadow-md'>
          <h2 class='text-xl font-semibold mb-4'>Kolekcje</h2>
          <p class='text-gray-600 mb-4'>Zarządzaj swoimi kolekcjami zoptymalizowanych obrazów.</p>
          <a href='/collections' class='text-blue-600 hover:underline'> Przejdź do kolekcji → </a>
        </div>

        <div class='bg-white p-6 rounded-lg shadow-md'>
          <h2 class='text-xl font-semibold mb-4'>Nowa Optymalizacja</h2>
          <p class='text-gray-600 mb-4'>Rozpocznij nową optymalizację obrazu.</p>
          <a href='/upload' class='text-blue-600 hover:underline'> Rozpocznij optymalizację → </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
